<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>FrontControllerServlet</servlet-name>
        <servlet-class>controller.FrontControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontControllerServlet</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>viewlayer.authentication.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VehicleRegistrationServlet</servlet-name>
        <servlet-class>viewlayer.VehicleRegistration</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VehicleRegistrationServlet</servlet-name>
        <url-pattern>/vehicleregistration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>viewlayer.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ComponentMaintenanceServlet</servlet-name>
        <servlet-class>viewlayer.ComponentMaintenanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ComponentMaintenanceServlet</servlet-name>
        <url-pattern>/componentmaintenance</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ScheduleMaintenanceServlet</servlet-name>
        <servlet-class>viewlayer.ScheduleMaintenanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ScheduleMaintenanceServlet</servlet-name>
        <url-pattern>/schedulemaintenance</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BreakHistoryServlet</servlet-name>
        <servlet-class>viewlayer.BreakHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BreakHistoryServlet</servlet-name>
        <url-pattern>/breakHistory</url-pattern>
    </servlet-mapping>
</web-app>

